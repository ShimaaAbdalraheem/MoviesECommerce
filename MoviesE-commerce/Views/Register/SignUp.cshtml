<section class="h-100 h-custom" style="background-color: #fdbcd2;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <img src="https://img.freepik.com/free-vector/sign-up-concept-illustration_114360-7875.jpg?size=626&ext=jpg&ga=GA1.1.1850333881.1701728966&semt=ais_user"
            class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
            alt="Sample photo">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>

            <form action="/Register/SignUp" method="post" enctype="multipart/form-data">

             @if (ViewData["Message"] != null)
             {
              <div class="alert alert-danger" role="alert">
                  @ViewData["Message"];
              </div>
             }
              <div data-mdb-input-init class="form-outline mb-4">
                <input type="text" id="form3Example1q" class="form-control" name="FirstName" required />
                <label class="form-label" for="form3Example1q">First Name</label>
              </div>

              <div data-mdb-input-init class="form-outline mb-4">
                <input type="text" id="form3Example2q" class="form-control" name="LastName" required />
                <label class="form-label" for="form3Example2q">Last Name</label>
              </div>

              <div data-mdb-input-init class="form-outline mb-4">
                <input type="email" id="form3Example3q" class="form-control" name="Email" required />
                <label class="form-label" for="form3Example3q">Email</label>
              </div>

              <div data-mdb-input-init class="form-outline mb-4">
                <input type="password" id="form3Example4q" class="form-control" name="Password" required />
                <label class="form-label" for="form3Example4q">Password</label>
              </div>

              <div data-mdb-input-init class="form-outline mb-4">
                <input type="tel" id="form3Example5q" class="form-control" name="PhoneNumber" required />
                <label class="form-label" for="form3Example5q">Phone Number</label>
              </div>

 <div class="mb-4" style="background-color: #b5bdc3; padding: 10px; border-radius: 5px;">
                <div class="input-box underline">
                  <input type="file" name="ImageURL" accept="image/*" required>
                  <div class="underline"></div>
                </div>
              </div>

              <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-lg btn-block" style="background-color: #dd0d63; color: #fff;">Sign Up</button>

            </form>
          
            @* <div class="pt-4 mb-3" style="margin-right: 20px;">*@ <!-- Added pt-4 class for top padding -->
    <div class="pt-4 mb-3" style="width: fit-content; margin-left: auto;"> <!-- Added pt-4 class for top padding -->
    <button onclick="goBack()" data-mdb-button-init data-mdb-ripple-init class="btn btn-lg" style="background-color: #fdbcd2; color: #fff;">Back</button>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>



          </div>
        </div>
      </div>
    </div>
  </div>
</section>
