@model MoviesE_commerce.Models.User
@{
    // Layout = "_UserLayout";
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>Snippet - BBBootstrap</title>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet'>
    <link href='#' rel='stylesheet'>
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <style>
        ::-webkit-scrollbar {
            width: 8px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: #E0628D;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #E0628D;
        }

            /* Handle on hover */
            ::-webkit-scrollbar-thumb:hover {
                background: #E0628D;
            }

        body {
            background: #E0628D
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #DE366F
        }

        .profile-button {
            background: #DE366F;
            box-shadow: none;
            border: none
        }

            .profile-button:hover {
                background: #DE366F
            }

            .profile-button:focus {
                background: #DE366F;
                box-shadow: none
            }

            .profile-button:active {
                background: #DE366F;
                box-shadow: none
            }

        .back:hover {
            color: #DE366F;
            cursor: pointer
        }

        .labels {
            font-size: 11px
        }

        .add-experience:hover {
            background: #DE366F;
            color: #DE366F;
            cursor: pointer;
            border: solid 1px #DE366F
        }

        .custom-btn-size {
            font-size: 0.99rem; /* Adjust font size */
            padding: 0.25rem 0.5rem; /* Adjust padding */
        }
    </style>
</head>
<body className='snippet-body'>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" width="200px" height="200px" src="@Model.ImageURL">
                    <form method="post" enctype="multipart/form-data" action="@Url.Action("UpdatePhotoForAdmin", "UserProfile")">
                        <div class="file-input-container">
                            <label for="fileInput" class="file-upload-button"></label><br />
                            <input id="fileInput" class="file-input" type="file" name="Img" accept="image/*" required>
                        </div><br /><br />
                        <button type="submit" class="btn btn-primary">Update Photo</button>
                    </form>
                    <br />
                    <br />
                    <br />
                    <form action="@Url.Action("DeleteUser", "UserProfile", new { id = @Model.Id })" method="post" onsubmit="return confirmDelete()" class="d-inline-block">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary profile-button" style="background-color: transparent; border-color: #007bff; color: #007bff;">
                            <strong>Delete</strong>
                        </button>
                    </form>


                </div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels">First Name</label>
                            <input type="text" class="form-control" placeholder="" value="@Model.FirstName">
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Last Name</label>
                            <input type="text" class="form-control" value="@Model.LastName" placeholder="">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Phone Number</label>
                            <input type="text" class="form-control" placeholder="" value="@Model.PhoneNumber">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Email</label>
                            <input class="form-control" placeholder="" value="@Model.Email">
                        </div>

                    </div>

                    <div class="mt-5 text-center">
                    <div class="d-inline-block mr-3">
                            <button class="btn btn-primary btn-custom" type="button" onclick="window.location.href = '/Admin/AdminDashboard';">Home</button>
                    </div>
                   @*  <div class="d-inline-block mr-3">
                        <button class="btn btn-primary btn-custom" type="button" onclick="window.location.href = '/UserProfile/Edit';">Edit</button>
                    </div> *@
                    <div class="d-inline-block">
                            <button onclick="goBack()" data-mdb-button-init data-mdb-ripple-init class="btn btn-custom" style="background-color: #1788C4; color: #fff;">Back</button>
                    </div>

                    <script>
                        function goBack() {
                            window.history.back();
                        }
                    </script>
                </div>

                <style>
                    .btn-custom {
                        width: 90px; /* Adjust the width as needed */
                        height: 40px; /* Adjust the height as needed */
                    }
                </style>


                </div>
                <script>
                    function confirmDelete() {
                        return confirm("Are you sure you want to delete this item?");
                    }
                </script>

            </div>
        </div>
    </div>
    </div>

    <script type='text/javascript' src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js'></script>
    <script type='text/javascript' src='#'></script>
    <script type='text/javascript' src='#'></script>
    <script type='text/javascript' src='#'></script>
    <script type='text/javascript'>
        var myLink = document.querySelector('a[href="#"]');
        myLink.addEventListener('click', function (e) {
            e.preventDefault();
        });
    </script>

</body>
</html>
