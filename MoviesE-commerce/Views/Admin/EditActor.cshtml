<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <h3></h3>
            <p class="blue-text"><br></p>
            <div class="card">
                <h5 class="text-center mb-4">Edit Actor</h5>
                <form asp-action="EditActor" method="post" class=" form-card" >
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-12 flex-column d-flex"> <label class="form-control-label px-3">Name<span class="text-danger"> *</span></label> <input type="text" id="Name" name="Name" placeholder="Enter your name" onblur="validate(1)" pattern="^[a-zA-Z][a-zA-Z ]*$" oninvalid="setCustomValidity('Please enter alphabets.')" onkeyup="setCustomValidity('')"  required> </div>
                       </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-12 flex-column d-flex"> <label class="form-control-label px-3">Bio<span class="text-danger"> *</span></label>  <textarea asp-for="Bio" class="form-control" rows="5" placeholder="Enter actor Bio" pattern="^[^\s].*" required></textarea> </div>
                    </div>

                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Profile Picture URL<span class="text-danger"> *</span></label> <input type="text" id="ProfilePictureURL" name="ProfilePictureURL" placeholder="Enter profile picture URL" onblur="validate(3)" pattern="^[^\s].*" required> </div>
                        <div class="form-group col-sm-6 flex-column d-flex">  <img src="@Model.ProfilePictureURL" class="border-info rounded-circle"  alt="@Model.Name" style="width: 250px; height: 250px; object-fit: cover;"> </div>


