                    </div> *@
                    <input type="hidden" asp-for="Id" />
                    <div class="row justify-content-end">
                        
                        <div class="form-group col-sm-6"> <button type="submit" class="btn-block btn-primary">Save Changes</button> </div>
                        <div class="form-group col-sm-6">
                            <a asp-action="Actors" class="btn btn-custom">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
